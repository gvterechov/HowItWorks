<% if data[:errors].present? %>
  <br>
  <div class="row">
    <% data[:errors].each do |error| %>
      <% error_text = error[:parts].map { |el| el[:text] }.join(' ') %>
      <div class="ui message">
        <p><%= error_text %></p>
      </div>
    <% end %>
  </div>
<% end %>
